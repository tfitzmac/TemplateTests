{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string"
        },
        "rmplName": {
            "type": "string"
        },
        "plName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Authorization/privateLinkAssociations",
            "apiVersion": "2020-05-01",
            "name": "[parameters('plName')]",
            "properties": {
                "privateLink": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('rgName'), '/providers/Microsoft.Authorization/resourceManagementPrivateLinks/', parameters('rmplName') ) ]",
                "publicNetworkAccess": "Disabled"
            }
        }
    ],
    "outputs": {}
}